{
  "name": "@superdispatch/http",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/superdispatch/http.git"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "lerna run build --no-private",
    "prebump": "yarn && yarn lint && yarn test && yarn build",
    "bump": "lerna version",
    "lint": "js-tools lint",
    "tdd": "jest --watch",
    "test": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "tsc"
    }
  },
  "lint-staged": {
    "*": [
      "js-tools lint --fix"
    ]
  },
  "prettier": "@superdispatch/prettier-config",
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/__testutils__/",
      "/node_modules/"
    ],
    "modulePathIgnorePatterns": [
      ".+/pkg/.+"
    ],
    "resetMocks": true,
    "roots": [
      "<rootDir>/packages/http/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.ts"
    ],
    "transform": {
      "\\.tsx?$": "babel-jest"
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "devDependencies": {
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-types": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-bundle-types": "^0.9.2",
    "@pika/plugin-standard-pkg": "^0.9.2",
    "@superdispatch/babel-preset": "^0.2.0",
    "@superdispatch/eslint-plugin": "^0.2.0",
    "@superdispatch/js-tools": "^0.2.0",
    "@superdispatch/prettier-config": "^0.2.0",
    "@superdispatch/tsconfig": "^0.2.0",
    "@types/jest": "^26.0.0",
    "@types/node-fetch": "^2.5.7",
    "babel-jest": "^26.3.0",
    "eslint": "^7.2.0",
    "husky": "^4.2.3",
    "jest": "^26.3.0",
    "jest-watch-typeahead": "^0.6.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.10",
    "node-fetch": "^2.6.1",
    "prettier": "^2.1.2",
    "typescript": "~4.0.0"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "resetMocks": true
}
